<div class="row nested-fields">
  <div class="form-group">
      <%= f.text_field :material_name %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :updated_at %>
  </div>
  <div class="form-group">
    <%= f.radio_button :order_status, true %><%= f.label :order_status, "発注済み", value: true %>
    <%= f.radio_button :order_status, false %><%= f.label :order_status, "未発注", value: false %>
  </div>

  <div class="form-group">
    <%= f.date_field :order_date %>
  </div>

  <div class="form-group">
      <%= link_to_remove_association "削除", f , class:"btn btn-outline-secondary" %>
  </div>
</div>