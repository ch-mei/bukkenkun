<div class="container">
  <div class="row">
    <div class="mx-auto mt-3">
      <h2><%= @owner.name %>様資材追加</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @owner, local: true do |f| %>
        <%= f.fields_for :materials do |m| %>
          <%= render 'material_fields', f: m %>
        <% end %>
          <div class="links">
            <%= link_to_add_association "追加", f, :materials, class: "btn btn-outline-secondary" %>
          </div>
          <div class="float-right">
            <%= f.submit "新規登録", class: "btn btn-outline-secondary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
