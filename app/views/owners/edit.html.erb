<div class="container">
  <div class="row">
    <h2><%= @owner.name %>様</h2>
  </div>

  <div class="row">
    <%= form_with model: @form, url: update_all_materials_path, loacl: true do |f| %>
    <%= f.hidden_field :owner_id, value: @owner.id %>
    <div>
      <table>
        <thead>
          <tr>
            <th>資材名</th>
            <th>発注状況</th>
            <th>発注予定日</th>
          </tr>
        </thead>
        <tbody>
          <%= f.fields_for :materials do |material| %>
            <tr>
              <td>
                <%= material.object.material_name %>
              </td>
              <td>
                <%= material.radio_button "order_status".to_sym, "true" %>発注済み
                <%= material.radio_button "order_status".to_sym, "false" %>未発注
              </td>
              <td>
                <%= material.date_field :order_date %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <%= f.submit "更新", class: "btn btn-outline-secondary" %>
    </div>
