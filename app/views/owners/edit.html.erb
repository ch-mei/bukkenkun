<div class="container">
  <div class="row">
    <div class="mx-auto mt-3">
      <h2>物件編集</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="text-center">
    <%= form_with model: @owner, local: true do |f| %>
    <div class="mt-3">
      <%= f.label :name, "物件名" %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit "変更", class: "btn btn-outline-secondary" %>
      <%= link_to "削除", owner_path(@owner), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
  </div>

</div>


