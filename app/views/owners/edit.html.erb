<div class="container">
  <div class="row">
    <h2>物件編集</h2>
  </div>

  <div class="row">
    <%= form_with model: @owner, local: true do |f| %>
      <div>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.submit "編集", class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
  <div>
    <%= link_to "削除", owner_path(@owner), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-outline-secondary" %>
  </div>
</div>
