      <%#= form_with model: @material, local: true do |f| %>
      <%#= f.text_field :material_name %>
      <%#= f.submit "追加", class: "btn btn-outline-secondary" %>
      <%# end %>
    </div>-->
    <% end %>
  </div>
</div>
