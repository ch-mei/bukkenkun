<div class="container">
  <div class="row">
    <h2>物件追加画面</h2>
  </div>

  <div class="row">
    <div>
      <%= form_with model: @owner, local: true do |f| %>
      <%= f.fields_for :materials do |m| %>
      <div>
        <div>
          <div>物件名</div>
          <div class="form-group"><%= f.text_field :name %></div>
        </div>
        <div>
          <div>顧客名</div>
          <div class="form-group"><%= f.collection_select(:client_id, @clients, :id, :name) %></div>
        </div>
        <div>
          <div>資材名</div>
          <%= render 'material_fields', f: m %>
          <div class="links">
            <%= link_to_add_association "追加", f, :materials %>
          </div>
        </div>

      </div>
      <div>
        <%= f.submit "新規登録", class: "btn btn-outline-secondary" %>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

