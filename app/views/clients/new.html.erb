<div class="container">
  <div class="row">
    <div class="mx-auto mt-3">
      <h2>顧客新規登録画面</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @client, url: clients_path, local: true do |f| %>
      <table>
        <tr>
          <th>顧客名</th>
          <td>
            <%= f.text_field :name %>
            <%= f.hidden_field :user_id, value: current_user.id %>
          </td>
        </tr>
      </table>
      <div>
        <%= f.submit "新規登録", class: "btn btn-outline-secondary mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
