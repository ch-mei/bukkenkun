<div class="container">
  <div class="row">
    <h2>顧客一覧</h2>
    <div>
      <%= link_to "顧客追加", new_client_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row">
    <div>
      <table>
        <thead>
          <tr>
            <th>顧客名</th>
            <th>物件数</th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |f| %>
          <tr>
            <td>
              <%= link_to client_path(f.id) do %>
                <%= f.name %>
              <% end %>
            </td>
            <td>
              <%= f.owners.count %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>

</div>