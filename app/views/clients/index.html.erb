<div class="container">
  <div class="row">
    <h2>顧客一覧</h2>
    <div>
      <%= link_to "顧客追加", new_client_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row">
    <div>
      <table>
        <thead>
          <tr>
            <th>販売店</th>
          </tr>
        </thead>
        <tbody>
          <% @sales_outlets.each do |f| %>
          <tr>
            <td>
            <%= link_to sales_outlet_path(f.id) do %>
              <%= f.sales_outlet_name %>様
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <table>
        <thead>
          <tr>
            <th>工務店</th>
          </tr>
        </thead>
        <tbody>
          <% @construction_shops.each do |f| %>
          <tr>
            <td>
              <%= link_to construction_shop_path(f.id) do %>
                <%= f.construction_shop_name %>様
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>