<div class="container">
  <div class="row">
    <h2><%= @partner.name %>さんとのチャット</h2>
  </div>
</div>
<div id="chats">
  <% @chats.each do |f| %>
    <% if f.user_id == current_user.id %>
      <div class="mycomment">
        <p><%= f.sentence%></p>
      </div>
    <% else %>
      <div class="fukidasi">
        <!--<div class="faceicon">
          <img src="/assets/profile.png" alt="相手">
        </div>-->
        <div class="chatting">
          <div class="says">
            <p><%= f.sentence %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="form">
  <%= form_with model: @chat, url: chats_path, local: true do |f| %>
    <%= f.text_field :sentence %>
    <%= f.hidden_field :partner_id %>
    <%= f.submit "送信", class: "btn btn-success" %>
  <% end %>
</div>

