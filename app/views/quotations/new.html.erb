<div class="container">
  <div class="row">
    <h2 class="mx-auto mt-3"><%= @owner.name %>様　見積もり追加画面</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="mx-auto mt-3">
      <%= form_with model: @quotation, local: true do |f| %>
        <table>
          <tr>
            <th>見積もりファイル</th>
            <td>
              <%= f.hidden_field :created_at %>
              <%= f.hidden_field :user_id, value: @user.id %>
              <%= f.hidden_field :owner_id, value: @owner.id %>
              <%= f.file_field :pdf %>
            </td>
          </tr>
          <tr>
            <th>見積もり名</th>
            <td>
              <%= f.text_field :item_name %>
            </td>
          </tr>
          <tr>
            <th>メーカー名</th>
            <td><%= f.text_field :manufacturer_name %></td>
          </tr>
          <tr>
            <th>コメント</th>
            <td><%= f.text_field :comment %></td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit "登録", class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

