<div class="container">
  <div class="row">
    <div class="mx-auto mt-3">
      <h2>見積もり編集</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @quotation, local: true do |f| %>
        <table>
          <tr>
            <th>見積りファイル</th>
            <td>
              <%= f.file_field :pdf %>
              編集前のファイル⇒
              <a href="<%= @quotation.pdf_url %>" target="_blank">
                <%= @quotation.created_at %> pdf
              </a>
            </td>
          </tr>
          <tr>
            <th>見積もり名</th>
            <td>
              <%= f.text_field :item_name %>
            </td>
          </tr>
          <tr>
            <th>メーカー名</th>
            <td><%= f.text_field :manufacturer_name %></td>
          </tr>
          <tr>
            <th>コメント</th>
            <td><%= f.text_field :comment %></td>
          </tr>
        </table>
        <div class="container">
          <div class="row float-right">
            <div class="mr-3">
              <%= f.submit "変更", class: "btn btn-outline-secondary" %>
            </div>
            <div>
              <%= link_to "削除", quotation_path(@quotation), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-outline-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
