<div class="container">
  <div class="row">
    <h2 class="mx-auto mt-3"><%= @owner.name %>様の見積もり一覧</h2>
  </div>
</div>
<div class="container">
  <div class="text-right">
    <div class="mt-3">
      <%= link_to "見積もり追加", quotation_new_path(@owner), class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <table class="table table-bordered mt-3">
      <thead class="bg-light">
        <tr class="text-center">
          <th>作成日付</th>
          <th>見積もり名</th>
        </tr>
      </thead>
      <tbody>
        <% @quotations.each do |quotation| %>
          <tr class="text-center">
            <td>
              <%= link_to quotation_path(quotation) do %>
                <%= quotation.created_at.strftime('%Y/%m/%d') %>
              <% end %>
            </td>
            <td>
              <%= quotation.item_name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= paginate @quotations %>
    </div>
  </div>
</div>