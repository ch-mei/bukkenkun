<div class="container">
  <div class="row">
    <h2><%= @sales_outlet.sales_outlet_name %>様</h2>
  </div>

  <div class="row">
    <div>
      <table>
        <thead>
          <tr>
            <th>工務店</th>
          </tr>
        </thead>
        <tbody>
          <div>
            <% @construction_shops.each do |f| %>
            <tr>
              <td><%= link_to f.construction_shop_name, construction_shop_path(f.id) %></td>
            </tr>
          </div>
          <div>
            <% end %>
            <%= form_with model: @construction_shop, url: construction_shops_path, method: :post, local: true do |f| %>
              <%= f.text_field :construction_shop_name %>
              <%= f.submit "工務店を追加する", class: "btn btn-success" %>
            <% end %>
          </div>
        </tbody>
      </table>
    </div>
    
    <div>
      <table>
        <thead>
          <tr>
            <th>物件一覧</th>
          </tr>
        </thead>
        <tbody>
          <%# @owners.each do |f| %>
          <tr>
            
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
