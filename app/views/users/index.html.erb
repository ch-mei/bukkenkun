<div class="container">
  <div class="row">
    <h2 class="mx-auto">ユーザー一覧</h2>
  </div>

  <div class="row">
    <div class="mx-auto">
      <table class="table ">
        <thead class="bg-light">
          <tr>
            <th>ユーザー名</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |f| %>
          <tr>
            <td>
              <%= link_to user_path(f.id) do %>
              <%= f.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
