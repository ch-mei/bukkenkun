<div class="container">
  <div class="row">
    <h2 class="mx-auto">タスク変更画面</h2>
  </div>

  <div class="row mt-4">
    <div class="mx-auto" >
    <%= form_with model: @task, url: task_path(@task), local: true do |f| %>
      <div class="form-group">
        <%= f.label :task, 'タスク' %>
        <%= f.text_field :task%>
      </div>
      <div class="form-group">
        <%= f.label :limit_date, '期限' %>
        <%= f.date_field :limit_date, class: "ml-3" %>
      </div>
      <div class="text-center">
        <%= f.submit "変更", class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    </div>
  </div>

</div>
